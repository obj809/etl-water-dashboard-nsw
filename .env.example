# Database provider: "local" for MySQL or "supabase" for PostgreSQL
DB_PROVIDER=local

# Local MySQL database
LOCAL_DATABASE_URI=mysql+mysqlconnector://user:password@localhost:3306/database

# Supabase PostgreSQL database
SUPABASE_DATABASE_URI=postgresql://postgres:password@db.xxxxxxxxxxxxx.supabase.co:5432/postgres

# API credentials
API_KEY=your_api_key
API_SECRET=your_api_secret

# Database connection
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_database_name

# Supabase connection (when DB_PROVIDER=supabase)
SUPABASE_DB_HOST=db.xxxxxxxxxxxxx.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_USER=postgres.xxxxxxxxxxxxx
SUPABASE_DB_PASSWORD=your_supabase_password
SUPABASE_DB_NAME=postgres

# CORS origins
CORS_ORIGINS=https://your-frontend.netlify.app,http://localhost:5173,http://127.0.0.1:5173
